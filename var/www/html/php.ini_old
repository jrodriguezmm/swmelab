expose_php = Off
;disable_functions = phpinfo, escapeshellarg, escapeshellcmd, exec, passthru, proc_close, proc_get_status, proc_nice, proc_open, proc_terminate, sheel_exec, system, popen,fclose, pclose

always_populate_raw_post_data = -1
date.timezone = "America/Bogota"
allow_url_fopen = On
allow_url_include = On
allow_url_use = On
post_max_size = 120M
upload_max_filesize = 120M
memory_limit = 120M
upload_tmp_dir = /var/www/html/tmp

display_errors = On
display_startup_errors = On

log_errors = On
error_reporting = E_ERROR
log_errors_max_len = 1024
ignore_repeated_errors = On
ignore_repeated_source = Off
report_memleaks = On
track_errors = On

session.use_cookies = 1

file_uploads = On
upload_max_filesize = 200M

extension=php_sockets.dll
error_reporting = E_ALL | E_STRICT
log_errors = On
display_errors = Off
error_log = /var/www/html/php-errors.log
sendmail_path = /usr/sbin/sendmail